<% include partials/header.ejs %> 
<div class="container">
    <%if(message!=""){ %>
    <p class="text-center text-successful"><%=message%></p>
</div>
    <% } %>

    <form action="" method="POST" enctype="multipart/form-data" style="margin-top: 50px ; margin-bottom: 50px;">
        <div class="form-row">
                <div class="form-group col-md-6">
            <select name="category" id="category" class="form-control" required>
                <option selected disable>Choose Category</option>
                <option value="Samsung">Samsung</option>
                <option value="Sony">Sony</option>
                <option value="oppo">oppo</option>
                <option value="Iphone">Iphone</option>
                <option value="others">others</option>

            </select>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input name="title" id="title" class="form-control" required placeholder="title">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <textarea name="description" id="description" col="10" rows="3" class="form-control" required placeholder="Description"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
               <input name="quantity" id="quantity" type="number" class="form-control" required placeholder="quantity">
             </div>
        </div>
        <div class="form-row">
                <div class="form-group col-md-6">
                   <input name="price" id="price" type="number" class="form-control" required placeholder="price">
                 </div>
            </div>

            <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="image">Product Image:</label>
                       <input name="image" id="image" type="file" class="form-control" required placeholder="image">
                     </div>
                </div>
        <button type="submit" class="btn btn-danger float-left">Add a product</button>
    </form>
<% include partials/footer.ejs %> 
